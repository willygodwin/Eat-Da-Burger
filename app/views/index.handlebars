	<h1>Eat-Da-Burger!</h1>

    <img src="img/burgers.jfif" alt="burger image">

<div class="burger-list">
    <div class="not-devoured">
        <h2>Not devoured</h2>
        <hr>

        <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgersList devour=true}}
        {{/unless}}
        {{/each}}
        </ul>
    </div>


    <div class="devoured">
        <h2>Devoured</h2>
        <hr>

        <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgersList devour=false}}
        {{/if}}
        {{/each}}
        </ul>
    </div>
</div>

<h2>Add a burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button class="burger-button submit-button devour-burger" type="submit">Add Burger</button>
</form>